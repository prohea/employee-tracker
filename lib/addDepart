const inquirer  = require("inquirer");
const { connection } = require("../db/connection");
//CRUD Functions
//Create

function addDepart() {
	console.log("Add Department");
	inquirer
		.prompt([
			//List options
			{
				type: "input",
				name: "department",
				message: "What is the new department's name?",
			},
		])
		.then(function (data) {
			connection.query(
				"INSERT INTO department SET ?",
				{
					name: data.depart,
				},
				function (err, res) {
					if (err) throw err;
					viewAllDepart();
				}
			);
		});
}

module.exports = addDepart();
